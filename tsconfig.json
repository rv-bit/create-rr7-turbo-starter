{
	"compilerOptions": {
		/* Base Options: */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ES2022",
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",

		/* Strictness */
		"strict": true,
		"noUncheckedIndexedAccess": true,

		/* If NOT transpiling with TypeScript: */
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true
	},
	"exclude": ["templates"]
}
