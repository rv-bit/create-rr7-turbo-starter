{
	"name": "web",
	"description": "The main web application, used for landing pages, information, and user interactions.",
	"private": true,
	"packageManager": "bun@1.2.2",
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"start": "react-router-serve ./build/server/index.js",
		"dev": "react-router typegen && bunx --bun vite",
		"typecheck": "npm run cf-typegen && react-router typegen && tsc -b",
		"cf-typegen": "wrangler types --config ../../config/wrangler/wrangler-web.toml",
		"deploy": "npm run build && wrangler deploy",
		"postinstall": "npm run cf-typegen",
		"preview": "npm run build && vite preview"
	},
	"dependencies": {
		"@org/auth": "*",
		"@org/db": "*",
		"@org/environment": "*",
		"@org/mailer": "*",
		"@org/trpc": "*",
		"@org/utils": "*",
		"@react-router/node": "^7.5.3",
		"@react-router/serve": "^7.5.3",
		"@tanstack/react-query": "^5.80.2",
		"@trpc/client": "^11.2.0",
		"@trpc/server": "^11.2.0",
		"@trpc/tanstack-react-query": "^11.2.0",
		"better-auth": "^1.2.8",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cookie": "^1.0.2",
		"dotenv": "^16.5.0",
		"isbot": "^5.1.27",
		"lucide-react": "^0.511.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-router": "^7.5.3",
		"remix-utils": "^8.8.0",
		"sonner": "^2.0.4",
		"superjson": "^2.2.2",
		"tailwind-merge": "^3.3.0",
		"vite-plugin-babel": "^1.3.1",
		"zod": "^3.25.46"
	},
	"devDependencies": {
