{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@org/environment": ["packages/environment"],
			"@org/database": ["packages/database"],
			"@org/mailer": ["packages/mailer"],
			"@org/utils": ["packages/utils"],
		},

		// For Vite and React
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["node"],
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",

		"jsx": "react-jsx",

		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"resolveJsonModule": true,

		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true

		// Some stricter flags that are not enabled by default
		// "noUnusedLocals": true
		// "noUnusedParameters": true

		// used for like process.env["NODE_ENV"] and not process.env.NODE_ENV
		// "noPropertyAccessFromIndexSignature": true
	},
	"exclude": ["node_modules", "build", "dist"],
	"include": ["packages/**/*", "apps/**/*", "turbo.d.ts"]
}
