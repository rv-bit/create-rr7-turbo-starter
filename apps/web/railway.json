{
	"$schema": "https://railway.com/railway.schema.json",
	"build": {
		"builder": "DOCKERFILE",
		"dockerfilePath": "apps/web/Dockerfile",
		"watchPatterns": ["apps/web/**", "packages/**", "turbo.json", "package.json", "bun.lock"]
	},
	"deploy": {
		"numReplicas": 1,
		"restartPolicyType": "ON_FAILURE",
		"sleepApplication": false
	}
}
